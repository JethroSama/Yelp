<%- include("partials/top") %>
<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>These are the campsites, senpai</p>
      <a href="/campsites/new" class="btn btn-primary">New Campsite</a>
    </div>
  </div>
</div>

<div class="container" >
  <div class="row text-center flexit">

  <% campsites.forEach((campsite)=>{%>
    <div class="col-lg-3 col-md-6">
      <a href="/campsites/<%=campsite._id %>">
      <div class="thumbnail">
        <img src="<%= campsite.image %>">
        <div class="caption">
        <%= campsite.name %>
        </div>
      </div>
      </a>
    </div>
    <% }) %>
  </div>
  
  

</div>


